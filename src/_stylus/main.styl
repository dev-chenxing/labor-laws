*
    box-sizing border-box
body
    max-width 1200px
    margin 0 auto
    font-size 20px
    a   
        color black
        text-decoration none
    .input
        position relative
        font-size 0.875rem
        margin 0 auto
        width 36rem
        +below(1024px)
            width 75%
        input.text
            width 100%
            border black solid 2px
            height 2rem
            outline: none
            font-size 1rem
            padding 0 0.5rem
        .icon
            position absolute
            right 0.25rem
            top 50%
            transform translateY(-50%)
        #search-results
            background-color white
            display none
            position absolute
            border black solid 2px
            border-top none
            width 100%
            padding 0.25rem 0.5rem
            .search-result
                cursor pointer
                display block
            .search-result:hover
                background-color lightgray
    nav
        display flex
        justify-content space-between
        align-items center
        margin-top 0.5rem
        .input
            margin 0
    header
        width 100%
        margin 0 auto
        padding 1rem
        h1
            text-align center
            +below(1024px)
                font-size 24px
    main
        padding 20px 100px 50px
        +below(1024px)
            padding 20px 50px 50px
        .law
            height 36px
            line-height 36px
            border-bottom 1px dashed lightgrey;
        .text-center
            text-align center
            text-indent 0
        p
            text-align justify
            text-indent 2em